# RareSift Frontend Production Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=https://raresift-backend.onrender.com
NEXT_PUBLIC_ENVIRONMENT=production

# Application Configuration
NEXT_PUBLIC_APP_NAME=RareSift
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=500000000
NEXT_PUBLIC_ALLOWED_FILE_TYPES=video/mp4,video/quicktime,video/x-msvideo

# Performance Configuration
NEXT_PUBLIC_CACHE_DURATION=3600