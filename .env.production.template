# RareSift Production Environment Variables
# Copy this file to .env.production and fill in the required values

# CRITICAL: Generate strong random values for these secrets
# Use: openssl rand -base64 32

# Database Configuration (PostgreSQL)
POSTGRES_DB=raresift_prod
POSTGRES_USER=raresift_user
POSTGRES_PASSWORD=                    # REQUIRED: Generate a strong password (min 32 chars)
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=                       # REQUIRED: Generate a strong password (min 32 chars)
REDIS_PORT=6379

# Application Security
SECRET_KEY=                           # REQUIRED: Generate with openssl rand -base64 64 (min 64 chars)

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
API_URL=https://your-domain.com

# CORS and Security
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Optional: External Services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-west-2
# S3_BUCKET=

# Optional: OpenAI
# OPENAI_API_KEY=

# SSL/TLS (if using custom certificates)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (Optional)
# SENTRY_DSN=
# PROMETHEUS_ENABLED=true

# Email/SMTP (Optional)
# SMTP_SERVER=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# FROM_EMAIL=noreply@your-domain.com

# Example commands to generate secure values:
# echo "SECRET_KEY=$(openssl rand -base64 64)"
# echo "POSTGRES_PASSWORD=$(openssl rand -base64 32)"
# echo "REDIS_PASSWORD=$(openssl rand -base64 32)"