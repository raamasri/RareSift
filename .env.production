# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration (Production - Use Secrets Backend)
DATABASE_HOST=${DB_HOST}
DATABASE_PORT=${DB_PORT}
DATABASE_NAME=${DB_NAME}
DATABASE_USER=${DB_USER}
DATABASE_PASSWORD=${DB_PASSWORD}
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration (Production - Use Secrets Backend)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# API Configuration (Production - Use Secrets Backend)
SECRET_KEY=${SECRET_KEY}
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=${FRONTEND_URL}

# AI Services (Production - Use Secrets Backend)
OPENAI_API_KEY=${OPENAI_API_KEY}
CLIP_MODEL_NAME=ViT-B/32
EMBEDDING_DIMENSION=1536
FRAME_EXTRACTION_INTERVAL=1.0

# File Storage (Production)
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=2147483648
ALLOWED_FILE_TYPES=mp4,avi,mov,mkv,webm
AWS_S3_BUCKET=${S3_BUCKET}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=${AWS_REGION}

# Security Configuration (Production)
CORS_ORIGINS=${CORS_ORIGINS}
CSRF_SECRET_KEY=${CSRF_SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/raresift.crt
SSL_KEY_PATH=/etc/ssl/private/raresift.key
FORCE_HTTPS=true

# Required Services (Production)
ENABLE_REDIS_CACHE=true
ENABLE_CELERY=true
ENABLE_MONITORING=true
ENABLE_SENTRY=true

# Monitoring & Observability (Production)
SENTRY_DSN=${SENTRY_DSN}
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Secrets Management (Production)
VAULT_ADDR=${VAULT_ADDR}
VAULT_TOKEN=${VAULT_TOKEN}
VAULT_SECRET_PATH=secret/raresift/production

# AWS Secrets Manager (Alternative)
AWS_SECRET_NAME=raresift/production
AWS_REGION=us-east-1

# Google Secret Manager (Alternative)
GCP_PROJECT_ID=${GCP_PROJECT_ID}
GCP_SECRET_PREFIX=raresift-production

# Performance & Limits (Production)
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=1000

# Backup Configuration (Production)
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30